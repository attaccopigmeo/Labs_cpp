{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build & run current file",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "/usr/bin/clang++ -std=c++17 -Wall \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" && \"${fileDirname}/${fileBasenameNoExtension}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "clear": true
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}