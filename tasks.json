{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ Modules",
      "type": "shell",
      "command": "/opt/homebrew/opt/llvm/bin/clang++",
      "args": [
        "-std=c++20",
        "-fmodules-ts",
        "name.ixx",
        "main.cpp",
        "-o",
        "main"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}